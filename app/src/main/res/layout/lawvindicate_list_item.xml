
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:orientation="vertical"
            android:layout_margin="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="维权编号:"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="17dp"/>
                <TextView
                    android:id="@+id/lawvindicate_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:scrollbarSize="0dp"
                    android:scrollbars="vertical"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_marginTop="13dp"
                    android:text=""
                    android:hint="暂无数据"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/lawvindicate_status"
                        android:layout_width="35dp"
                        android:layout_height="17dp"
                        android:text="已受理"
                        android:gravity="center"
                        android:background="@drawable/status_bg"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:layout_marginTop="13dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="#F2F3F4"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#9A9A9A"
                    android:textSize="12sp"
                    android:text="维权作品:"/>
                <TextView
                    android:id="@+id/lawvindicate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:text=""
                    android:hint="暂无数据"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"
                    android:text="联系人:"/>
                <TextView
                    android:id="@+id/lawvindicate_author"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:hint="暂无数据"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"
                    android:text="联系方式:"/>
                <TextView
                    android:id="@+id/lawvindicate_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:hint="暂无数据"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="#F2F3F4"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:textColor="#9A9A9A"
                        android:text="申请时间:"/>
                    <TextView
                        android:id="@+id/lawvindicate_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text=""
                        android:hint="暂无数据"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>