<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray5">
    <include layout="@layout/title_main"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">

            <View
                android:layout_width="4dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@color/blue">
            </View>
            <TextView
                android:id="@+id/item_tittle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="单资产利用率排行"
                android:textColor="#ff333333"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/liner_form"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:text="类别"
                    android:textSize="11sp"
                    android:layout_margin="1dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#6A9DF1"/>
                <TextView
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:text="数量"
                    android:textSize="11sp"
                    android:layout_margin="1dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#6A9DF1"/>
                <TextView
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:text="占比"
                    android:textSize="11sp"
                    android:layout_margin="1dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#6A9DF1"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
            <LinearLayout
                android:id="@+id/liner_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="数据详情"
                    android:textColor="#218BFF"
                    android:gravity="center" />
                <ImageView
                    android:id="@+id/imag_down"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/down"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">

                <lecho.lib.hellocharts.view.ColumnChartView
                    android:id="@+id/frameNewBase"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="20dp">
                </lecho.lib.hellocharts.view.ColumnChartView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>