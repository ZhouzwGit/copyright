<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="38dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center">
                <ProgressBar
                    android:id="@+id/login_progress"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_form"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:textColor="#1385f8"
                        android:layout_marginBottom="15dp"
                        android:textSize="38sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a2a2a2"
                        android:layout_marginBottom="11dp"
                        android:textSize="12sp"
                        android:text="请您输入账号和密码登录系统"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:padding="2dp"
                        android:background="@drawable/loginbj"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="16dp"
                            android:src="@mipmap/user"/>
                        <AutoCompleteTextView
                            android:id="@+id/email"
                            android:windowSoftInputMode="adjustResize"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:textColor="@color/black"
                            android:hint="请输入账号"
                            android:textSize="12sp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/loginbj"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="2dp"
                            android:paddingVertical="17dp"
                            android:src="@mipmap/password"/>

                        <EditText
                            android:id="@+id/password"
                            android:layout_marginLeft="5dp"
                            android:windowSoftInputMode="adjustResize"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="16"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:minEms="6"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:id="@+id/showpassword"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:onClick="onClick"
                            android:src="@mipmap/showpw"/>
                    </LinearLayout>
                    <Button
                        android:layout_marginTop="27dp"
                        android:id="@+id/email_sign_in_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="18sp"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:background="@mipmap/loginbutton"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="40dp"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/ic_type1"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/wrong"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="账号或密码不正确"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"></LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_gravity="bottom"
        android:gravity="center">
        <View
            android:layout_width="67dp"
            android:layout_height="1dp"
            android:background="#cbcbcb"></View>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:textColor="#cbcbcb"
            android:text="中国版权保护中心"
            android:textSize="10sp"/>
        <View
            android:layout_width="67dp"
            android:background="#cbcbcb"
            android:layout_height="1dp"></View>

    </LinearLayout>

</LinearLayout>
