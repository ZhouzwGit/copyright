
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/authorimage_id"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/authorimage_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="权利来源:"
                        android:textSize="13sp"
                        android:textColor="@color/textcolor2"
                        />
                    <copyright.hxqh.com.copyright.copright.view.MyTextView
                        android:id="@+id/name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:maxEms="5"
                        android:scrollbars="horizontal"
                        android:scrollbarSize="0dp"
                        android:textSize="13sp"
                        android:textColor="@color/textcolor2"
                        android:text="产品001"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="17dp"
                    android:src="@mipmap/ic_right3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/textcolor1"
                    android:text="编号:"
                    />
                <copyright.hxqh.com.copyright.copright.view.MyTextView
                    android:id="@+id/ahthorno_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textcolor1"
                    android:text="p12345678"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/textcolor1"
                    android:text="作者属性:"
                    />
                <copyright.hxqh.com.copyright.copright.view.MyTextView
                    android:id="@+id/ahthortype_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textcolor1"
                    android:text="质押"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/textcolor1"
                    android:text="来源方:"
                    />
                <copyright.hxqh.com.copyright.copright.view.MyTextView
                    android:id="@+id/isAuthor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textcolor1"
                    android:text="p12345678"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="14dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/textcolor1"
                    android:text="擅长类型:"
                    />
                <copyright.hxqh.com.copyright.copright.view.MyTextView
                    android:id="@+id/restype_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textcolor1"
                    android:text="产品001"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>