<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_tag_id"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/basictag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:text="产品"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/badge1"
                android:layout_toRightOf="@+id/basictag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:minWidth="10dp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/ic_badgebj"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="7sp" />
        </RelativeLayout>
        <View
            android:id="@+id/line1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:layout_width="19dp"
            android:layout_height="2dp"
            android:background="@mipmap/bottomline"
            android:visibility="gone"
            ></View>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:paddingTop="7dp"
                android:id="@+id/basictag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:text="渠道"
                />
            <TextView
                android:id="@+id/badge2"
                android:layout_toRightOf="@+id/basictag_2"
                android:layout_width="wrap_content"
                android:minWidth="10dp"
                android:gravity="center"
                android:paddingHorizontal="3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="-4dp"
                android:textSize="7sp"
                android:text="0"
                android:textColor="@color/white"
                android:background="@drawable/ic_badgebj"
                />
        </RelativeLayout>
        <View
            android:id="@+id/line2"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:layout_width="19dp"
            android:layout_height="2dp"
            android:background="@mipmap/bottomline"
            android:visibility="gone"
            ></View>

    </LinearLayout>

</LinearLayout>
